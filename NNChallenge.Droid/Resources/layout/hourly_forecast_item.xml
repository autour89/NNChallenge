<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    style="@style/ForecastItemContainer">

    <LinearLayout
        style="@style/ForecastContentContainer">

        <TextView
            android:id="@+id/date_text"
            style="@style/ForecastDateText"
            android:text="📅 Jul 16, 2025" />

        <TextView
            android:id="@+id/time_text"
            style="@style/ForecastTimeText"
            android:text="🕐 14:00" />

        <TextView
            android:id="@+id/condition_text"
            style="@style/ForecastConditionText"
            android:text="☀️ Sunny" />

        <TextView
            android:id="@+id/humidity_text"
            style="@style/ForecastHumidityText"
            android:text="💧 65%" />

    </LinearLayout>

    <TextView
        android:id="@+id/temperature_text"
        style="@style/ForecastTemperatureText"
        android:text="22.5°C" />

</LinearLayout>
